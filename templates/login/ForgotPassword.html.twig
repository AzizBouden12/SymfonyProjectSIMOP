
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/ForgotPassword.css') }}">
{% endblock %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <div class="change-password-page">
        <div class="change-password-container">
            <h1 class="change-password-title">Veuillez changer votre mot de passe</h1>
            <form action="/change-password" method="post">
                <div class="form-group">
                    <input type="password" id="new_password" name="new_password" placeholder="Nouveau mot de passe" required>
                </div>
                <div class="form-group">
                    <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirmer le mot de passe" required>
                </div>
                <button type="submit">Confirmer</button>
            </form>
        </div>
    </div>
{% endblock %}
